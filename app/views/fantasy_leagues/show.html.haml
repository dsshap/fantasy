.row
  .span6
    %h2
      = @fantasy_league.name
    - if @league_owner
      %h6
        = link_to "edit", edit_fantasy_league_path(@fantasy_league)

.row
  .span8
    %ul.nav.nav-tabs
      - @fantasy_league.weeks.each do |week|
        %li{:class => week_tab(week)}
          = link_to "week #{week.week_number}", fantasy_league_path(week_number: week.week_number)
    %table.table
      %thead
        %tr
          %th
            Team
          %th
            QB
          %th
            RB
          %th
            WR/TE
          %th
            WR/TE
          %th
            Total
      %tbody
        - @week.teams.each do |team|
          %tr
            %td
              = link_to team.participant.user.email_prefix, fantasy_league_fantasy_team_path(@fantasy_league, team)
            %td
              = team.players.qb.total
            %td
              = team.players.rb.total
            - team.players.wr_te.each do |f_player|
              %td
                = f_player.total
            %td
              = team.players.collect(&:total).inject(0){|sum,x| sum+x}

  .span3.offset1
    %table.table
      %thead
        %tr
          %th
            League Players
          %th
      %tbody
        %tr
          %td(colspan=2)
            = form_tag( fantasy_league_new_participant_path(@fantasy_league.id), {:class => "form-search"} ) do
              / = f.error_notification
              = email_field_tag :email, nil, placeholder: "Email", class: 'input-medium'
              = button_tag "Invite", class: 'btn btn-success'

        - @fantasy_league.participants.each do |participant|
          %tr
            %td
              = participant.email_prefix
            %td
              = participant.status


.row
  .span12
    = link_to "Back to Leagues", root_path, class: 'btn btn-large'

    


= content_for :debug do
  = "league: #{@fantasy_league.id}"
  %br
  = "league_owner: #{@league_owner}"
  %br
  = "Week: #{@week.id}"
  %br
  = "Teams Count: #{@week.teams.count}"
  %br
  = "Team: #{@team.id}"
  %br
  = "current_user_participant: #{@current_user_participant.to_json}"