%h2 Sign Up
= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: 'form-horizontal no-label-form'}) do |f|
  = f.error_notification
  .form-inputs
    = f.input :email, :required => true, label: false, placeholder: "Email"
    = f.input :password, :required => true, label: false, placeholder: "Password"
    = f.input :password_confirmation, :required => true, label: false, placeholder: "Password Confirmation"
    = f.button :submit, "Sign up", class: 'btn btn-large btn-primary'
= render "devise/shared/links"