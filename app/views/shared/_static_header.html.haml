.navbar.navbar-inverse.navbar-fixed-top
  .navbar-inner
    .container
      %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to "Old Town Sports", root_path, class: "brand"
      .nav-collapse.collapse
        %ul.nav
          %li{class: (current_page?(root_path) ? "active" : "")}
            = link_to "home", root_path
          %li{class: (current_page?(new_user_registration_path) ? "active" : "")}
            = link_to "sign up", new_user_registration_path
          %li{class: (current_page?(contact_path) ? "active" : "")}
            = link_to "contact", contact_path
          %li{class: (current_page?(how_it_works_path) ? "active" : "")}
            = link_to "how it works", how_it_works_path
        %ul.nav.pull-right
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown"}
              sign in
              %b.caret
            %ul.dropdown-menu
              = simple_form_for User.new, url: user_session_path, html: { class: 'form-horizontal sign_in_form_drop_down'} do |f|
                = f.input :email, label: false, placeholder: "email", :autofocus => true
                = f.input :password, label: false, placeholder: "password", required: true
                = f.input :remember_me, :as => :boolean, :inline_label => 'remember me', :label => false
                = f.submit "sign in", class: 'btn btn-primary'
